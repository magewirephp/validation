{
  "name": "magewirephp/validation",
  "description": "PHP Laravel like standalone validation library (forked from rakit/validation)",
  "license": "MIT",
  "replace": {
    "rakit/validation": "*"
  },
  "autoload": {
    "psr-4": {
      "Rakit\\Validation\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Rakit\\Validation\\Tests\\": ["tests", "tests/Fixtures"]
    }
  },
  "require": {
    "php": ">=8.1 <8.5",
    "ext-mbstring": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5 || ^10.0",
    "squizlabs/php_codesniffer": "^3",
    "php-coveralls/php-coveralls": "^2.2"
  },
  "scripts": {
    "test": [
        "phpunit",
        "phpcs"
    ]
  }
}
